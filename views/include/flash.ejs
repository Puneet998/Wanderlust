<!-- ðŸ‘‡ Slide-in CSS -->
<style>
  .flash-slide {
    animation: slideDown 0.6s ease-out;
    position: relative;
    top: -18px;
  }

  @keyframes slideDown {
    0% {
      opacity: 0;
      transform: translateY(-30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<!-- âœ… Flash Messages -->
<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show flash-slide mx-auto w-100 w-md-75 w-lg-50 text-center mt-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show flash-slide mx-auto w-100 w-md-75 w-lg-50 text-center mt-3" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
